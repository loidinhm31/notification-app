{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Notification App",
  "version": "0.1.0",
  "identifier": "com.notificationapp.dev",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"]
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Notification App",
        "width": 0,
        "height": 0,
        "visible": false,
        "resizable": false,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
